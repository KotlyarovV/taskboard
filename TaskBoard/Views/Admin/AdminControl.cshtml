@model IEnumerable<TaskBoard.Models.AdminModel>
@{
    ViewData["Title"] = "AdminControl";
    Layout = "_BasicAdminLayout";
}

<div class="container">
    <div class="row justify-content-center p-2">
        <h2>Администраторы</h2>
    </div>
    <div class="table-responsive table-hover table-striped table-bordered">
        <table class="table">
            <thead>
                <tr>
                    <th>Логин</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <th>
                            @admin.Login
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="container-fluid">
    <div class="row justify-content-center p-2">
        <h2>Добавление администратора</h2>
    </div>
    <div class="row justify-content-center ">
        <form class="form-horizontal card p-2" method="post" enctype="multipart/form-data" action="/admin/addadmin">
            @ViewBag.Error
            <div class="form-group">
                <label for="login">Логин</label>
                <input type="text" required name="login" class="form-control" id="login" placeholder="Логин">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label>
                <input type="password" required name="password" class="form-control" id="password" placeholder="Пароль">
            </div>
            <button type="submit" class="btn btn-primary">Добавить администратора</button>
        </form>
    </div>
</div>