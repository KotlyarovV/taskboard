
@{
    ViewData["Title"] = "Index";
    Layout = "_BasicLayout";
}

<div class="container-fluid">
    <div class="row justify-content-center p-2">
        <h2>Предложить заказ</h2>
    </div>
    <div class="row justify-content-center ">
        <div class="col-xl-6">
            <form class="card p-2" method="post" enctype="multipart/form-data" action="/addorder/addorder">
                <div class="form-group">
                    <label for="offerHeader">Заголовок</label>
                    <input type="text" class="form-control" id="offerHeader" name="Header" required aria-describedby="offerHeaderHelp" placeholder="Введите заголовок">
                    <small id="headerHelp" class="form-text text-muted">Выбирайте короткий и понятный заголовок</small>
                </div>
                <div class="form-group">
                    <label for="offerCategory">Категория заказа</label>
                    <select id="offerCategory" required name="Theme" class="form-control">
                        <option selected disabled value=''>Выберите категорию...</option>
                        <option value="Languages">Языки</option>
                        <option value="Math">Математика</option>
                        <option value="Phisic">Физика</option>
                        <option value="PipeRepair">Починка труб</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="offerDescription">Описание заказа</label>
                    <textarea class="form-control" name="Description" id="offerDescription" rows="7" required aria-describedby="offerDescriptionHelp"></textarea>
                    <small id="offerDescriptionHelp" class="form-text text-muted">Подробно опишите требования к заказу</small>
                </div>
                <div class="form-group">
                    <label for="offerDescription">Дополнительные файлы</label>
                    <div class="custom-file">
                        <input class="form-control-file" name="formFiles" id="File" type="file" multiple aria-describedby="offerFileHelp"/>
                    </div>
                    <small id="offerFileHelp" class="form-text text-muted">Загрузите дополнительные файлы, если требуется</small>
                </div>
                <div class="form-group">
                    <label for="offerDatetime">Срок выполнения</label>
                    <input type="date" required name="Deadline" class="form-control" id="offerDatetime">
                </div>
                <div class="form-group">
                    <label for="offerCost">Стоимость заказа</label>
                    <input type="number" class="form-control" min="1" max="50000" required name="Value" id="offerCost" placeholder="Введите стоимость заказа">
                </div>
                <div class="form-group">
                    <label for="offerWay">Способ выполнения</label>
                    <select id="offerWay" required name="ImplementationMethod" class="form-control">
                        <option selected disabled value=''>Выберите способ выполнения</option>
                        <option value="Remotely">Удаленно</option>
                        <option value="InPlace">Лично</option>
                        <option value="Other">Другой</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="offerContact">Способ связи</label>
                    <select required id="offerContact" name="ConnectionMethod" class="form-control">
                        <option selected disabled value=''>Выберите способ связи с исполнителем</option>
                        <option value="Internet">Интернет</option>
                        <option value="Phone">Сотовая связь</option>
                        <option value="Other">Другой</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Предложить заказ</button>
            </form>
        </div>
    </div>
</div>

