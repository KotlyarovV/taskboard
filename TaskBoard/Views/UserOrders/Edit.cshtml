@model TaskBoard.Models.OrderModel
@{
    ViewData["Title"] = "Edit";
    Layout = "_BasicLayout";
}
<div class="container-fluid">
    <div class="row justify-content-center p-2">
        <h2>Редактирование заказа</h2>
    </div>
    <div class="row justify-content-center ">
        <div class="col-xl-6">
            <form class="card p-2" method="post" enctype="multipart/form-data" action="/userorders/edit">
                <div class="form-group">
                    <label for="offerHeader">Заголовок</label>
                    <input type="text" class="form-control" id="offerHeader" name="Header" required aria-describedby="offerHeaderHelp" placeholder="Введите заголовок" value="@Model.Header">
                    <small id="headerHelp" class="form-text text-muted">Выбирайте короткий и понятный заголовок</small>
                </div>
                <div class="form-group">
                    <label for="offerCategory">Категория заказа</label>
                    <select id="offerCategory" required name="Theme" class="form-control">
                        <option disabled value=''>Выберите категорию...</option>
                        <option
                                @if (Model.Theme == TaskBoard.Models.Enums.OrderTheme.Languages) { @Html.Raw("selected"); } 
                                value="Languages">Языки</option>
                        <option
                                @if (Model.Theme == TaskBoard.Models.Enums.OrderTheme.Math) { @Html.Raw("selected"); } 
                                value="Math">Математика</option>
                        <option
                                @if (Model.Theme == TaskBoard.Models.Enums.OrderTheme.Phisic) { @Html.Raw("selected"); } 
                                value="Phisic">Физика</option>
                        <option
                                @if (Model.Theme == TaskBoard.Models.Enums.OrderTheme.PipeRepair) { @Html.Raw("selected"); } 
                                value="PipeRepair">Починка труб</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="offerDescription">Описание заказа</label>
                    <textarea class="form-control" name="Description" id="offerDescription" rows="7" required aria-describedby="offerDescriptionHelp">@Model.Description</textarea>
                    <small id="offerDescriptionHelp" class="form-text text-muted">Подробно опишите требования к заказу</small>
                </div>
                <div class="form-group">
                    <label for="offerDescription">Дополнительные файлы</label>
                    <div class="custom-file">
                        <input class="form-control-file" name="formFiles" id="File" type="file" multiple aria-describedby="offerFileHelp" />
                    </div>
                    <small id="offerFileHelp" class="form-text text-muted">Загрузите дополнительные файлы, если требуется</small>
                </div>
                <div class="form-group">
                    <label for="offerDatetime">Срок выполнения</label>
                    <input type="date" required name="Deadline" class="form-control" id="offerDatetime" value="@Model.Deadline.Year-@if (Model.Deadline.Month < 10) { @Html.Raw("0");}@Model.Deadline.Month-@Model.Deadline.Day">
                </div>
                <div class="form-group">
                    <label for="offerCost">Стоимость заказа</label>
                    <input type="number" class="form-control" min="1" max="50000" required name="Value" id="offerCost" placeholder="Введите стоимость заказа" value="@Model.Value">
                </div>
                <div class="form-group">
                    <label for="offerWay">Способ выполнения</label>
                    <select id="offerWay" required name="ImplementationMethod" class="form-control">
                        <option disabled value=''>Выберите способ выполнения</option>
                        <option 
                                @if (Model.ImplementationMethod == TaskBoard.Models.Enums.ImplementationMethod.Remotely) { @Html.Raw("selected"); } 
                                value ="Remotely">Удаленно</option>
                        <option
                                @if (Model.ImplementationMethod == TaskBoard.Models.Enums.ImplementationMethod.InPlace) { @Html.Raw("selected"); } 
                                value="InPlace">Лично</option>
                        <option 
                                @if (Model.ImplementationMethod == TaskBoard.Models.Enums.ImplementationMethod.Other) { @Html.Raw("selected"); } 
                                value="Other">Другой</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="offerContact">Способ связи</label>
                    <select required id="offerContact" name="ConnectionMethod" class="form-control">
                        <option disabled value=''>Выберите способ связи с исполнителем</option>
                        <option
                                @if (Model.ConnectionMethod == TaskBoard.Models.Enums.ConnectionMethod.Internet) { @Html.Raw("selected"); } 
                                value="Internet">Интернет</option>
                        <option
                                @if (Model.ConnectionMethod == TaskBoard.Models.Enums.ConnectionMethod.Phone) { @Html.Raw("selected"); } 
                                value="Phone">Сотовая связь</option>
                        <option
                                @if (Model.ConnectionMethod == TaskBoard.Models.Enums.ConnectionMethod.Other) { @Html.Raw("selected"); } 
                                value="Other">Другой</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Отредактировать</button>
            </form>
        </div>
    </div>
</div>


