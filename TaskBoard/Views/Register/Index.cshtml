
@{
    ViewData["Title"] = "Index";
    Layout = "_BasicLayout";
}
<div class="container-fluid">
    <div class="row justify-content-center p-2">
        <h2>Регистрация</h2>
    </div>

    <div class="row justify-content-center ">

        <form class="form-horizontal card p-2" method="post" enctype="multipart/form-data" action="/register/registration">
            @ViewBag.Error
            <div class="form-group">
                <div class="row justify-content-center">
                    <div>
                        <label for="name" class="control-label">Имя</label>
                        <input required type="text" class="form-control" id="name" name="Name" placeholder="Имя">
                    </div>
                    &emsp;
                    <div>
                        <label for="secondname" class="control-label">Фамилия</label>
                        <input required type="text" class="form-control" id="secondname" name="SecondName" placeholder="Фамилия">
                    </div>

                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Адрес email</label>
                <input type="email" required name="Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="login">Логин на сайте</label>
                <input type="text" required name="Login" class="form-control" id="login" placeholder="Логин">
            </div>
            <div class="form-group">
                <label for="phone">Мобильный телефон</label>
                <input type="tel" required name="Phone" class="form-control" id="phone" placeholder="Мобильный телефон">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label>
                <input type="password" required name="Password" class="form-control" id="password" placeholder="Пароль">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Повторите пароль</label>
                <input type="password" required name="CheckPassword" class="form-control" id="confirm_password" placeholder="Повторите пароль">
            </div>
            <div class="form-group">
                <label for="education">Образование</label>
                <input type="text" name="Education" class="form-control" id="education" placeholder="Образование">
            </div>
            <div class="form-group">
                <label for="categories">Интересующие заказы</label>
                <select class="form-control" name="InterestedTheme" id="categories">
                    <option selected disabled>Выберите категорию...</option>
                    <option value="Languages">Языки</option>
                    <option value="Math">Математика</option>
                    <option value="Phisic">Физика</option>
                    <option value="PipeRepair">Починка труб</option>
                </select>
                <label for="categories">
                    У вас будет возможность отфильтровать заказы<br> по категриям,
                    кроме того мы будем периодически<br> присылать вам
                    заказы, что скорее всего вам понравятся
                </label>
            </div>
            <div class="form-group">
                <label for="information">О себе</label>
                <textarea class="form-control" name="Information" id="information" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Добавить фото</label>
                <input type="file" id="exampleInputFile" name="Photo" accept=".png,.jpg,.jpeg">
                <p class="help-block">Данное фото будет отображаться у Вас в профиле.</p>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" required value="true" name="Agreement"> Я даю согласие на обработку персональных данных
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Отправить</button>
        </form>
    </div>
</div>
