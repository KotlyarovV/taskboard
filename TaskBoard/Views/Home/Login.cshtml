
@{
    ViewData["Title"] = "Index";
    Layout = "_BasicLayout";
}


<br><br><br>
<div class="container-fluid">
    <div class="row justify-content-center p-2">
        <h2>Авторизация</h2>
    </div>
    <div class="row justify-content-center ">
        <form method="post" enctype="multipart/form-data" action="/account/authority">
            <div class="form-group">
                <label for="login">Введите email</label>
                <input type="text" name="Username" id="login" required class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Введите пароль</label>
                <input type="password" required name="Password" id="password" class="form-control">
                <small id="passwordHelpInline" class="text-muted">
                    <a href="/register/index">Зарегистрироваться</a>
                </small>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-primary">
            </div>

        </form>
    </div>
</div>



